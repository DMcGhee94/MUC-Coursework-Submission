            android:name="com.example.darre.navdrawer.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.darre.navdrawer.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.darre.navdrawer.OverallActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.darre.navdrawer.FindPetrol"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.darre.navdrawer.PriceComparison"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.darre.navdrawer.UserPreferences"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.darre.navdrawer.About"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.darre.navdrawer.ResultsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
