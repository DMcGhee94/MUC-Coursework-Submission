<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_image_new" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/splashCreated"
        android:id="@+id/createdBy"
        android:layout_above="@+id/matricNumber"
        android:textSize="12sp"
        android:textColor="#454545"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/splashMatric"
        android:id="@+id/matricNumber"
        android:layout_above="@+id/appName"
        android:textSize="12sp"
        android:textColor="#454545"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/splashAppName"
        android:id="@+id/appName"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:textColor="#454545"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true" />

</RelativeLayout><!-- From: file:/E:/navDrawerWorking/app/src/main/res/layout/splash_screen.xml -->